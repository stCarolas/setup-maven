# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd}]
end_of_line = crlf

[*.{ts,js,yml}]
quote_type = single
spaces_around_brackets = inside

[*.{md,txt}]
max_line_length = off
trim_trailing_whitespace = false
